}

blockquote {
    padding: 5px 15px;
    border-left: 4px solid #cecece;
    background-color: #FAFAFA;
    font-weight: lighter;
    margin-bottom: 1em;
}

.post-body > blockquote::before {
    content: "\201c";
    float: left;
    font-size: 2.5em;
    font-weight: bold;
    line-height: .6em;
    margin-left: -0.5em;
    color: #929292;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    font-family: monospace;
    font-style: normal;
}

blockquote p {
    margin-bottom: 0;
}

.post-body a {
    color: #167300;
}

a:hover, span.exturl:hover, a:active, span.exturl:active {
    border-bottom-color: #167300;
}

