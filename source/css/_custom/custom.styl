.post-body h1,
.post-body h2,
.post-body h3,
.post-body h4,
.post-body h5,
.post-body h6 {
    color: #ba3925;
    font-weight: normal;
    font-family: "Open Sans","DejaVu Sans",sans-serif;
    line-height: 240%;
    margin-top: 1em;
}

.post-body h1 > a.headerlink,
.post-body h2 > a.headerlink,
.post-body h3 > a.headerlink,
.post-body h4 > a.headerlink,
.post-body h5 > a.headerlink,
.post-body h6 > a.headerlink{
    position: absolute;
    z-index: 1001;
    width: 1.5ex;
    margin-left: -1.5ex;
    display: block;
    text-decoration: none!important;
    border-bottom: 0;
    visibility: hidden;
    text-align: center;
    font-weight: 400;
}

.post-body h1 > a.headerlink::before,
.post-body h2 > a.headerlink::before,
.post-body h3 > a.headerlink::before,
.post-body h4 > a.headerlink::before,
.post-body h5 > a.headerlink::before,
.post-body h6 > a.headerlink::before {
    content: "\00A7";
    font-size: 1.1em;
    display: block;
    color: #ba3925;
}

.post-body h1:hover > a.headerlink,
.post-body h2:hover > a.headerlink,
.post-body h3:hover > a.headerlink,
.post-body h4:hover > a.headerlink,
.post-body h5:hover > a.headerlink,
.post-body h6:hover > a.headerlink {
    visibility: visible;
}

.post-title{
    color:#3e3e3e;
    font-weight: 360;
}

@media (min-width: 1200px){
.posts-expand .post-title {
    font-size: 32px;
}}

.posts-expand .post-title-link {
    color: #167300;
    line-height: 1.5;
}

.posts-expand .post-title-link::before{
